<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D8CFE2">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Posting Resep Anda"
            android:textSize="18sp"
            android:textColor="#6C5B7B"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/btnPosting"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#6C5B7B"
            android:text="Posting"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_wistcook"
            android:background="@drawable/rounded_imageview"
            android:contentDescription="Profile Picture" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wisteria"
            android:textSize="16sp"
            android:textColor="#6C5B7B" />
    </LinearLayout>

    <!-- Nama Resep Input -->
    <EditText
        android:id="@+id/etNamaResep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Masukkan nama resep"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Ketikkan deskripsi"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Masakan"
                android:textSize="14sp"
                android:textColor="#6C5B7B"
                android:gravity="center" />

            <ImageView
                android:id="@+id/ivFotoMasakan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_add_photo"
                android:background="@drawable/rounded_imageview"
                android:contentDescription="Foto Masakan"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Tutorial"
                android:textSize="14sp"
                android:textColor="#6C5B7B"
                android:gravity="center" />

            <ImageView
                android:id="@+id/ivVideoTutorial"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_video_tutorial"
                android:background="@drawable/rounded_imageview"
                android:contentDescription="Video Tutorial"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Kategori Masakan Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih kategori masakan kamu"
            android:textSize="14sp"
            android:textColor="#6C5B7B"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6C5B7B"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/btnKategori1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_background_selector"
            android:text="Nusantara"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnKategori2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_background_selector"
            android:text="Sarapan"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnKategori3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_background_selector"
            android:text="Kue"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnKategori4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_background_selector"
            android:text="Puding"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnKategori5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button_background_selector"
            android:text="Diet"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
