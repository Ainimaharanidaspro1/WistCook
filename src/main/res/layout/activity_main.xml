<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4C4D2"
    tools:context=".MainActivity">

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search your favorite food"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@null"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:inputType="text" />
    </androidx.cardview.widget.CardView>

    <!-- Riwayat Pencarian -->
    <TextView
        android:id="@+id/tv_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Pencarian"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_search"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_riwayat"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:justifyContent="flex_start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/tag_background"
            android:text="Seblak"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/tag_background"
            android:text="Puding"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/tag_background"
            android:text="Cookies"
            android:textColor="#000000" />
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Jelajahi Aneka Resep -->
    <TextView
        android:id="@+id/tv_jelajahi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelajahi aneka resep"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/history_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Grid Layout -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jelajahi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_category_example"
                android:contentDescription="Category 1"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
