<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masuk_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#998DA6">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Halo, Pengguna"
        android:textColor="#543B4D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="197dp"
        android:layout_height="57dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Apa yang ingin kamu buat?"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/menusearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notif" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <LinearLayout
            android:id="@+id/categoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/buttonNusantara"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="Nusantara"
                android:backgroundTint="#F2F1F1"
                android:textColor="#181717"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonSarapan"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="Sarapan"
                android:backgroundTint="#F2F1F1"
                android:textColor="#181717"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonKue"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="Kue"
                android:backgroundTint="#F2F1F1"
                android:textColor="#181717"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonPudding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:padding="8dp"
                android:text="Pudding"
                android:backgroundTint="#F2F1F1"
                android:textColor="#181717"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonDiet"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="Menu Diet"
                android:backgroundTint="#F2F1F1"
                android:textColor="#181717"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_resep" />


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="439dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/navvv" />

    <ImageView
        android:id="@+id/imagePosting"
        android:layout_width="@dimen/image_posting_width"
        android:layout_height="@dimen/image_posting_height"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nav1" />

    <!-- Gambar Home -->
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="@dimen/image_icon_width"
        android:layout_height="@dimen/image_icon_height"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <!-- Gambar Cari -->
    <ImageView
        android:id="@+id/imageCari"
        android:layout_width="@dimen/image_icon_width"
        android:layout_height="@dimen/image_icon_height"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cari" />

    <!-- Gambar Favorit -->
    <ImageView
        android:id="@+id/imageFavorit"
        android:layout_width="@dimen/image_icon_width"
        android:layout_height="@dimen/image_icon_height"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/favorit" />

    <!-- Gambar Akun -->
    <ImageView
        android:id="@+id/imageAkun"
        android:layout_width="@dimen/image_icon_width"
        android:layout_height="@dimen/image_icon_height"
        android:layout_marginBottom="@dimen/image_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user" />

</androidx.constraintlayout.widget.ConstraintLayout>
