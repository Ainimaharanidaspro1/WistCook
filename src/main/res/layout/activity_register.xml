<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E7E1EC">

    <TextView
        android:id="@+id/tv_title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Buat Akun"
        android:textSize="24sp"
        android:textColor="#6E3F6D"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_subtitle_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create an account so you can explore all the existing jobs"
        android:textSize="19sp"
        android:textColor="#6E3F6D"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_email_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:backgroundTint="#6E3F6D"
        android:textColor="#000000"
        android:textColorHint="#6E3F6D"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/et_password_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:backgroundTint="#6E3F6D"
        android:textColor="#000000"
        android:textColorHint="#6E3F6D"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_email_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_confirm_password_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Konfirmasi Kata Sandi"
        android:inputType="textPassword"
        android:backgroundTint="#6E3F6D"
        android:textColor="#000000"
        android:textColorHint="#6E3F6D"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_register_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6E3F6D"
        android:text="Daftar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_already_have_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Sudah memiliki akun"
        android:textColor="#6E3F6D"
        app:layout_constraintTop_toBottomOf="@id/btn_register_submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
