<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_notification"
    android:padding="12dp">

    <!-- Icon Notification -->
    <ImageView
     android:id="@+id/ivNotificationIcon"
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:layout_alignParentStart="true"
     android:src="@drawable/ic_wistcook"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="8dp" />

    <!-- App Name -->
<TextView
    android:id="@+id/tvAppName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/ivNotificationIcon"
    android:text="WistCook"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="#FFFFFF" />

    <!-- Timestamp -->
<TextView
   android:id="@+id/tvNotificationTimestamp"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignBaseline="@id/tvAppName"
   android:layout_alignParentEnd="true"
   android:text="34m ago"
   android:textSize="12sp"
   android:textColor="@android:color/darker_gray" />

    <!-- Notification Message -->
<TextView
  android:id="@+id/tvNotificationMessage"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@id/tvAppName"
  android:layout_toEndOf="@id/ivNotificationIcon"
  android:text="Hi Anna, sepertinya kamu belum coba resep ini. Yuk coba!"
  android:textSize="14sp"
  android:layout_marginTop="4dp"
  android:textColor="#FFFFFF" />

    </RelativeLayout>
